}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/register.css" />
</head>
<body>
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="wp">
        <div class="row body1">
            <div class="col-md-4 box">
                <section>
                    <form id="account" method="post">
                        <h2>Nơi Đăng Nhập</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating inputBox">
                            <span>Email</span>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name" />
                            <label asp-for="Input.Email" class="form-label" required="required">
                                <i></i>
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating inputBox">
                            <span>Mật Khẩu</span>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label" required="required">
                                <i></i>
                            </label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>
                        <div class="links">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                        <div class="icons">
                            <p class="textchu">Hoặc Đăng Nhập Bằng</p>
                            <div>
                                <a href="#"> <i class="fa-brands fa-facebook"></i></a>
                                <a href="#"> <i class="fa-brands fa-twitter"></i></a>
                                <a href="#"> <i class="fa-brands fa-google"></i></a>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
            <div class="col-md-6 col-md-offset-2">
                <section>
                    <img src="~/images/ps5.jpg" alt="PlayStation 5">
                </section>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script src="~/js/register.js"></script>
    }
</body>
</html>
